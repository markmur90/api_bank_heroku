        "operationId": "getPaymentStatus",
        "parameters": [
          {
            "name": "paymentId",
            "in": "path",
            "description": "Used to unambiguously identify a payment transaction",
            "required": true,
            "schema": {
              "maxLength": 256,
              "type": "string"
            }
          },
          {
            "name": "Correlation-Id",
            "in": "header",
            "description": "Free form key controlled by the caller e.g. uuid",
            "required": false,
            "schema": {
              "maxLength": 50,
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
